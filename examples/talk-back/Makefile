# ---------------------------------------------------------------------

#DEVICE = CC2430
DEVICE = CC2533

# ---------------------------------------------------------------------

ifeq ($(DEVICE), CC2430)
  XRAM_LOC = 0xE000
  XRAM_SIZE = 0x1F00
else ifeq ($(DEVICE), CC2533)
  XRAM_LOC = 0x0000
  XRAM_SIZE = 0x0F00
endif

ROOT_DIR = ../..
BUILD_DIR = .build

LIB_SOURCES = $(wildcard $(ROOT_DIR)/lib/*.c) $(wildcard $(ROOT_DIR)/lib/**/*.c)
LIB_OBJECTS = $(patsubst $(ROOT_DIR)/lib/%.c,$(BUILD_DIR)/lib/%.rel,$(LIB_SOURCES))

SOURCES = main.c
OBJECTS = $(patsubst %.c,$(BUILD_DIR)/%.rel,$(SOURCES))

# http://sdcc.sourceforge.net/doc/sdccman.pdf
COMPILE = sdcc -mmcs51 -c --std-c11 --opt-code-speed -D$(DEVICE) -I. -I$(ROOT_DIR)/include
BUILD_LIB = sdar -rc
LINK = sdcc -mmcs51 --xram-loc $(XRAM_LOC) --xram-size $(XRAM_SIZE)

# symbolic targets:
all: talk-back.bin talk-back.hex

print-%: ; @echo $* = $($*)

$(BUILD_DIR)/%.rel: %.c
	@mkdir -p $(dir $@)
	$(COMPILE) -o $@ $<

$(BUILD_DIR)/lib/%.rel: $(ROOT_DIR)/lib/%.c
	@mkdir -p $(dir $@)
	$(COMPILE) -o $@ $<

$(BUILD_DIR)/lib.lib: $(LIB_OBJECTS)
	$(BUILD_LIB) $@ $(LIB_OBJECTS)

$(BUILD_DIR)/talk-back.ihx: $(OBJECTS) $(BUILD_DIR)/lib.lib
	@mkdir -p $(dir $(BUILD_DIR))
	$(LINK) --out-fmt-ihx -o $(BUILD_DIR)/talk-back.ihx $(OBJECTS) $(BUILD_DIR)/lib.lib

talk-back.bin: $(BUILD_DIR)/talk-back.ihx
	makebin $(BUILD_DIR)/talk-back.ihx > talk-back.bin

talk-back.hex: $(BUILD_DIR)/talk-back.ihx
	cp $(BUILD_DIR)/talk-back.ihx ./talk-back.hex

program: talk-back.hex
	cc-tool -t 

clean:
	rm -r -f $(BUILD_DIR)
	rm talk-back.hex

